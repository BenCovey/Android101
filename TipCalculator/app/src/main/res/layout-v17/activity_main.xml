<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.benvc.tipcalculator.MainActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_material_dark"
            android:minHeight="75dp"
            android:minWidth="50dp"
            android:baselineAligned="false"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/txtScreen"
                android:id="@+id/txtScreen"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="68sp"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:paddingRight="5dp"
                android:background="@android:color/black"
                android:paddingLeft="5dp"
                android:padding="0dp"
                android:paddingTop="60dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="85dp"
            android:background="#331e1e"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnCE"
                android:id="@+id/btnAC"
                android:layout_weight="1"
                android:background="@color/colorTopLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnPlusminus"
                android:id="@+id/btnPlusminus"
                android:layout_weight="1"
                android:background="@color/colorTopLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnBack"
                android:id="@+id/btnBack"
                android:layout_weight="1"
                android:background="@color/colorTopLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnDivide"
                android:id="@+id/btnDivide"
                android:layout_weight="1"
                android:background="@color/colorRightOrange"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="44dp"
                android:paddingTop="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="85dp"
            android:background="#331e1e"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn7"
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn8"
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn9"
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnMultiply"
                android:id="@+id/btnMultiply"
                android:layout_weight="1"
                android:background="@color/colorRightOrange"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="44dp"
                android:paddingTop="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="85dp"
            android:background="#331e1e"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn4"
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn5"
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn6"
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnMinus"
                android:id="@+id/btnMinus"
                android:layout_weight="1"
                android:background="@color/colorRightOrange"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="85dp"
            android:background="#331e1e"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn1"
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn2"
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn3"
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnAdd"
                android:id="@+id/btnAdd"
                android:layout_weight="1"
                android:background="@color/colorRightOrange"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="44dp"
                android:paddingTop="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="85dp"
            android:background="#331e1e"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btn0"
                android:id="@+id/btn0"
                android:layout_weight="2"
                android:background="@color/colorLeftGrey"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnPeriod"
                android:id="@+id/btnPeriod"
                android:layout_weight="1"
                android:background="@color/colorLeftGrey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="44dp"
                android:paddingTop="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/btnEquals"
                android:id="@+id/btnEquals"
                android:layout_weight="1"
                android:background="@color/colorRightOrange"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="44dp"
                android:paddingTop="15dp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
